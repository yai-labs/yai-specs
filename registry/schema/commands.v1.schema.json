{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "yai-law:registry/schema/commands.v1.schema.json",
  "title": "YAI CLI Commands v1 (ABI-bound)",
  "type": "object",
  "required": ["version", "binary", "commands"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "binary": { "type": "string", "minLength": 1 },

    "defaults": {
      "type": "object",
      "properties": {
        "ws_flag": { "type": "string" },
        "ws_default_source": { "type": "string" }
      },
      "additionalProperties": true
    },

    "exit_codes": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },

    "command_sets": {
      "type": "array",
      "items": { "$ref": "#/$defs/command_set" }
    },

    "commands": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/command" }
    }
  },

  "$defs": {
    "arg": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "flag": { "type": "string" },
        "pos": { "type": "integer", "minimum": 1 },
        "type": { "type": "string", "minLength": 1 },
        "values": { "type": "array", "items": { "type": "string" } },
        "required": { "type": "boolean" },
        "default": {}
      },
      "additionalProperties": true
    },

    "artifact_io": {
      "type": "object",
      "required": ["role"],
      "properties": {
        "role": { "type": "string", "minLength": 1 },
        "schema_ref": { "type": "string" },
        "path_hint": { "type": "string" }
      },
      "additionalProperties": true
    },

    "command_set": {
      "type": "object",
      "required": ["id", "title", "items"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_\\-\\.]{1,63}$"
        },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["command"],
            "properties": {
              "command": {
                "type": "string",
                "pattern": "^yai\\.[a-z0-9_\\-]+\\.[a-z0-9_\\-]+$"
              },
              "label": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },

    "command": {
      "type": "object",
      "required": ["id", "name", "group", "summary", "args"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^yai\\.[a-z0-9_\\-]+\\.[a-z0-9_\\-]+$"
        },

        "name": { "type": "string", "minLength": 1 },
        "group": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },

        "aliases": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "pattern": "^[a-z0-9][a-z0-9_\\-]{1,63}$"
            }
        },

        "deprecated": { "type": "boolean" },
        "replaced_by": {
          "type": "string",
          "pattern": "^yai\\.[a-z0-9_\\-]+\\.[a-z0-9_\\-]+$"
        },

        "since": { "type": "string" },
        "until": { "type": "string" },

        "args": { "type": "array", "items": { "$ref": "#/$defs/arg" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "side_effects": { "type": "array", "items": { "type": "string" } },

        "law_hooks": { "type": "array", "items": { "type": "string" } },
        "law_invariants": { "type": "array", "items": { "type": "string" } },
        "law_boundaries": { "type": "array", "items": { "type": "string" } },

        "uses_primitives": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[STO]-\\d{3}$" }
        },

        "emits_artifacts": { "type": "array", "items": { "$ref": "#/$defs/artifact_io" } },
        "consumes_artifacts": { "type": "array", "items": { "$ref": "#/$defs/artifact_io" } }
      },
      "additionalProperties": true,

      "allOf": [
        {
          "if": {
            "properties": { "deprecated": { "const": true } },
            "required": ["deprecated"]
          },
          "then": {
            "required": ["replaced_by"]
          }
        }
      ]
    }
  },

  "additionalProperties": false
}