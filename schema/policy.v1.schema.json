{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "yai-law:schema/policy.v1.schema.json",
  "title": "YAI Policy v1",
  "type": "object",
  "required": ["v", "policy_id", "policy_hash", "baseline", "contract_ref", "rules"],
  "properties": {
    "v": { "type": "integer", "minimum": 1 },
    "policy_id": { "type": "string", "minLength": 1 },
    "policy_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },

    "baseline": {
      "type": "object",
      "required": ["baseline_id"],
      "properties": {
        "baseline_id": { "type": "string", "minLength": 1 },
        "baseline_version": { "type": ["string", "integer"] }
      },
      "additionalProperties": true
    },

    "contract_ref": { "type": "string", "minLength": 1 },

    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rule_id", "action"],
        "properties": {
          "rule_id": { "type": "string", "minLength": 1 },
          "match": { "type": "object" },
          "action": { "type": "string", "enum": ["allow", "deny"] },
          "reason_code": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
