{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "yai-law:schema/containment_metrics.v1.schema.json",
  "title": "YAI Containment Metrics v1",
  "type": "object",
  "required": ["v", "run_id", "generated_at", "metrics"],
  "properties": {
    "v": { "type": "integer", "minimum": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "wave_id": { "type": "string" },
    "generated_at": { "type": "string", "minLength": 1 },
    "policy_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },

    "metrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "value", "unit"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "value": { "type": ["number", "integer"] },
          "unit": { "type": "string", "minLength": 1 },
          "window": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
