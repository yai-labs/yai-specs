{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "yai-law:law/abi/schema/artifacts.v1.schema.json",
  "title": "YAI Artifacts Registry v1",
  "type": "object",
  "required": ["v", "artifacts"],
  "properties": {
    "v": { "type": "integer", "const": 1 },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/artifact" }
    }
  },
  "$defs": {
    "artifact": {
      "type": "object",
      "required": ["role", "schema_ref", "description"],
      "properties": {
        "role": { "type": "string", "minLength": 1 },
        "schema_ref": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
