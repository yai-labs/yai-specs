{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "formal/schema/traceability.v1.schema.json",
  "title": "YAI Formal Traceability Matrix v1",
  "type": "object",
  "required": ["v", "generated_at", "repo_version", "invariants"],
  "properties": {
    "v": {
      "type": "integer",
      "const": 1
    },
    "generated_at": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "repo_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "contracts",
          "spec_artifacts",
          "vectors",
          "formal",
          "bindings",
          "coverage"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^I-\\d{3}-[a-z0-9-]+$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "contracts": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "spec_artifacts": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "vectors": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "formal": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["module", "config", "properties"],
              "properties": {
                "module": {
                  "type": "string",
                  "minLength": 1
                },
                "config": {
                  "type": "string",
                  "minLength": 1
                },
                "properties": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "bindings": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "coverage": {
            "type": "object",
            "required": ["docs", "tests", "formal"],
            "properties": {
              "docs": { "type": "boolean" },
              "tests": { "type": "boolean" },
              "formal": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
